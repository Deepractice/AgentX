{
  "name": "@agentxjs/common",
  "version": "1.4.0",
  "description": "Common utilities for AgentX platform - Logger facade and shared infrastructure",
  "keywords": [
    "agentx",
    "common",
    "logger",
    "internal"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/deepractice/Agent",
    "directory": "packages/agentx-common"
  },
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "bun run build.ts",
    "dev": "bun --watch build.ts",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@agentxjs/types": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^22.19.1",
    "bun-dts": "0.1.70",
    "typescript": "^5.9.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
